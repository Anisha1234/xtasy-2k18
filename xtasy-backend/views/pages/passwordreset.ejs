<!DOCTYPE html>
<html style="background-color:#353b43;">

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>Xtasy-2k18</title>
    <!-- Mobile Specific Meta
                ================================================== -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS
        ================================================== -->
    <!-- bootstrap.min css -->
    <link rel="stylesheet" href="plugins/bootstrap/dist/css/bootstrap.min.css">
    <!-- Main Stylesheet -->
    <link rel="stylesheet" href="stylesheets/style.css">
    <!-- Favicon and touch icons -->
    <link rel="shortcut icon" href="assets/img/backgrounds/favicon.png">
    <style>
        body {
            width: 45%;
            height: 38%;
            margin: auto;
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            -ms-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            padding: 20px;
            border-radius: 15px;
        }
        
        label {
            padding: 15px 15px 0px 0px;
        }
        
        .color {
            color: #6aaaff;
            font-weight: bold;
            font-family: 'Philosopher', sans-serif;
        }
        
        #wait {
            background: #e9e9e9;
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            right: 0;
            height: 100%;
            width: 100%;
            opacity: 0.8;
            z-index: 999;
        }
        
        .loader {
            position: relative;
            top: 50%;
            -ms-transform: translateY(-50%);
            -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
        }
        
        @media (max-width: 768px) {
            body {
                width: 100%;
                height: 300px;
                border-radius: 0px;
            }
        }
    </style>
    <%- include ../partials/_head %>
</head>

<body>
    <div id="wait"><img src='../images/loader.gif' width="64" height="64" class="loader" /></div>

    <h2><span class="color">Reset your Password</span></h2>
    <hr>
    <form id="passwordreset" class="form-inline">
        <label for="new password">New password:</label>
        <input id="pass" type="password" placeholder="Enter new password" name="password" class="form-control" required>
        <br><br>
        <button type="submit" class="btn btn-info">Submit</button>
    </form>
    <script type="text/javascript">
        var mail = <%- JSON.stringify(mail) %>; // To be changed
        console.log(mail);


        $("#passwordreset").submit(function() {
            console.log("form submitted")
            var info = {
                "emailid": mail,
                "password": $("#pass").val()
            }
            $("#wait").css("display", "block");

            $.post('/api/change', info, function(data, status) {
                alert(data.msg);
                $("#wait").css("display", "none");

            });
            console.log(info);
            return false;
        })
    </script>
</body>

</html>