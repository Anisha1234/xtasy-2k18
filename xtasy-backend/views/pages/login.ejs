    <!-- Top content -->
    <div class="top-content">
        <div id="background_animate"></div>

        <div class="inner-bg">
            <div class="container">

                <div class="row">
                    <div class="col-sm-8  text">
                        <center>
                            <h1><strong>Xtasy</strong> :Get Ready For The Action</h1>
                        </center>

                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Login to Xtasy</h3>
                                    <p>Enter email and password to log on:</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <form id="loginform" class="login-form">
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Username</label>
                                        <span><i class="fa fa-user"></i></span>
                                        <input type="email" name="form-username" placeholder="Email" class="form-username form-control input-lg" id="emailid" required>
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Password</label>
                                        <span><i class="fa fa-lock"></i>
                                        <input type="password" name="form-password" placeholder="Password" class="form-password form-control" id="password" required>
                                    </div>
                                    <a href="/forgot" style="left:0" >Forgot Password?</a>
                                    <input type="submit" name="submit" value="Login" class="button" />
                                </form>
			                    </div>
		                    </div>



                        </div>

                        <div class="col-sm-1 middle-border"></div>
                        <div class="col-sm-1"></div>

                        <div class="col-sm-5">

                        	<div class="form-box">
                        		<div class="form-top">
	                        		<div class="form-top-left">
	                        			<h3>Sign up now</h3>

	                        		</div>
	                        		<div class="form-top-right">
	                        			<i class="fa fa-pencil"></i>
	                        		</div>
	                            </div>
	                            <div class="form-bottom">
				                    <form id="regform" action='api/register' method="post" class="registration-form">
                                        <div class="form-group">
                                            <label  for="form-name">Name</label>
                                            <input name="name" type="text" class="form-control" placeholder="Name" id="name" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="form-name">Email</label>
                                            <input name="emailid" type="text" class="form-control" placeholder="Email" id="emailid2" required>
                                        </div>
                                        <div class="form-group">
                                            <label for="phone number">Phone Number</label>
                                            <input name="contact" type="text" class="form-control input-lg" placeholder="Phone No" id="contact" required>
                                        </div>
                                        <div class="form-group" >
                                            <label for="Gender">Gender</label>
                                            <select type="text" class="form-control input-lg" id="gender" name="gender">
                                                <option value="male">Male</option>
                                                <option value="female">Female</option>
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <label for="College Name">College</label>
                                            <input name="college" type="text" class="form-control" placeholder="College" id="college" required>
                                        </div>


                                        <div class="form-group">
                                            <label for="password">Password</label>
                                            <div class="input-group pb-modalreglog-input-group">
                                                <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                                                <input name="password" type="password" class="form-control" id="password2" placeholder="Password" required>
                                            </div>
                                        </div>
                                        <div class="g-recaptcha" data-sitekey="6LflXkEUAAAAAO1UTbxrb01mKe8j9SaAlJg5ns0H"></div>
                                        <audio id="sound1" src="assets/audio/login_audio.mp3" preload="auto"></audio>
                                        <button type="submit" class="button">Submit</button>
                                    </form>
                                </div>
                    </div>

